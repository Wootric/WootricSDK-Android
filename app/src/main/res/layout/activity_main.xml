<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:gravity="top"
    tools:weakActivity="com.wootric.androidsdk_demo.MainActivity"
    android:background="@color/bg_color">
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/ic_wootric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"/>
    <Button
        android:id="@+id/show_survey_button"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:onClick="showSurvey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/start_survey_hint"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

    <Button
        android:layout_below="@id/show_survey_button"
        android:layout_centerHorizontal="true"
        android:onClick="showAnotherActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/navigate_other_activity"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>

</RelativeLayout>

