<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wootric_thank_you_layout_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/wootric_thank_you_layout_padding"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/wootric_tv_thank_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/wootric_tv_thank_you_size"
        android:layout_marginBottom="@dimen/wootric_tv_thank_you_margin"
        android:text="@string/wootric_thank_you"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:id="@+id/wootric_layout_facebook_like"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wootric_tv_thank_you"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wootric_fa_facebook_like"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/wootric_social"
            android:text="@string/fa_thumbs_up" />

        <TextView
            android:id="@+id/wootric_tv_facebook_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wootric_social_text_size"
            android:text="@string/tv_facebook_like"
            android:paddingTop="@dimen/wootric_social_tv_padding_vertical"
            android:paddingBottom="@dimen/wootric_social_tv_padding_vertical"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wootric_layout_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wootric_layout_facebook_like"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wootric_fa_facebook"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/wootric_social"
            android:text="@string/fa_facebook" />

        <TextView
            android:id="@+id/wootric_tv_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wootric_social_text_size"
            android:text="@string/tv_facebook"
            android:paddingTop="@dimen/wootric_social_tv_padding_vertical"
            android:paddingBottom="@dimen/wootric_social_tv_padding_vertical"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wootric_layout_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wootric_layout_facebook"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wootric_fa_twitter"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/wootric_social"
            android:text="@string/fa_twitter" />

        <TextView
            android:id="@+id/wootric_tv_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wootric_social_text_size"
            android:text="@string/tv_twitter"
            android:paddingTop="@dimen/wootric_social_tv_padding_vertical"
            android:paddingBottom="@dimen/wootric_social_tv_padding_vertical"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/wootric_btn_thank_you_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="16sp"
        android:background="@color/wootric_score_color"
        android:textColor="@android:color/white"
        android:layout_below="@+id/wootric_layout_twitter"
        android:layout_marginTop="@dimen/wootric_thank_you_action_button_margin"
        android:gravity="center"
        android:text="@string/wootric_btn_thank_you_action"/>

    <TextView
        android:id="@+id/wootric_btn_thank_you_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/wootric_button_text"
        android:textColor="@color/wootric_survey_layout_header_background"
        android:padding="@dimen/wootric_btn_padding"
        android:text="@string/wootric_example_btn_dismiss"/>
</RelativeLayout>